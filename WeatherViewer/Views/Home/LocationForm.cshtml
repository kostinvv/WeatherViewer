<div class="container py-4">
    <div class="row mb-2">
        <div class="col-md-8 col-xl-6 text-center mx-auto">
            <h2 class="display-6 fw-bold">Search bar</h2>
            <p class="text-muted">Enter the name of your city.</p>
        </div>
    </div>
    <form class="d-flex justify-content-center flex-wrap" method="post" asp-action="GetLocations">
        <div class="mb-3">
            <input name="name" type="text" class="form-control" placeholder="Moscow">
        </div>
        <div class="mb-3">
            <button class="btn btn-outline-secondary ms-2" type="submit">Search</button>
        </div>
    </form>
</div>