@model IEnumerable<ForecastDto>

@{
    ViewBag.Title = "Weather forecast";
    Layout = "_Layout";
}

<div class="container py-4">
  <div class="row mb-5">
    <div class="col-md-8 col-xl-6 text-center mx-auto">
      <h2>Weather forecast</h2>
      <a asp-controller="home" asp-action="index" class="link-primary" type="button">Return</a>
    </div>
  </div>
  <h5 class="text-center mb-4">Hourly forecast</h5>
  <div class="row">
    <!-- Hourly forecast -->
    <div class="col-md-8 col-xl-6 mx-auto">
      <ol class="list-group mb-4">
        @foreach (var value in Model)
        {
          var iconPath = $"/svg/{value.Icon}.svg";
          <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
              <div class="fw-bold">@value.Month</div>
              <p style="margin-bottom: 0;">
                @value.Temp<span>°C</span>, @value.Description
              </p>
            </div>
            <img class="icon" width="50" height="50" src="@iconPath" alt="">
          </li>
        }
      </ol>
    </div>
  </div>
</div>